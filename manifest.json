{
  "manifest_version": 3,
  "name": "Simple Create Link",
  "version": "1.0.0",
  "description": "現在のタブのURLとタイトルをリンク形式でクリップボードに保存",
  "author": "sunadarake",
  "homepage_url": "https://github.com/sunadarake/chrome-extension-create-links",
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Simple Create Link",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  }
}
